{
  "name": "pg-transactional-outbox",
  "version": "0.2.0",
  "description": "Production-grade Transactional Outbox Framework for PostgreSQL",
  "type": "module",
  "main": "dist/main/index.js",
  "types": "dist/main/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main/index.js",
      "types": "./dist/main/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./adapters": {
      "import": "./dist/adapters/index.js",
      "types": "./dist/adapters/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node --loader ts-node/esm src/main.ts",
    "dev": "ts-node-esm src/main.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "db:migrate": "node --loader ts-node/esm scripts/migrate.ts",
    "db:seed": "node --loader ts-node/esm scripts/seed.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "keywords": [
    "transactional-outbox",
    "outbox-pattern",
    "postgresql",
    "event-driven",
    "microservices",
    "cdc",
    "debezium",
    "at-least-once",
    "idempotency",
    "event-sourcing"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/json": "^1.0.0",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.57.1",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "pg": "^8.11.3"
  },
  "peerDependencies": {
    "@opentelemetry/api": "^1.7.0"
  },
  "peerDependenciesMeta": {
    "@opentelemetry/api": {
      "optional": true
    }
  }
}
